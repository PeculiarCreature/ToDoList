<h3>Component</h3>
@page "/todo"
@rendermode InteractiveServer


<h3>Todo</h3>
<input @bind="newTodo" />
<button>Add todo</button>



@code {
    private List<TodoItem> todos = new();
    string newTodo = "";

    void AddTodo()
    {
        if (!string.IsNullOrWhiteSpace(newTodo))
        {
                todos.Add(new TodoItem { Title = newTodo });
                newTodo = string.Empty;
        }
    }
}

<input />
<button>Add todo</button>
          
<ul>
    @foreach (var todo in todos)
    {
            <li>@todo.Title</li>
    }
</ul>





